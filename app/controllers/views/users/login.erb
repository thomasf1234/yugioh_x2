<!DOCTYPE html>
<html>
<head>
  <meta name="viewport">
  <link rel="stylesheet" type="text/css" href="/css/style.css">
  <script type="text/javascript" src="/js/jquery/3.3.1/jquery.min.js"></script>
  <script>
$(document).ready(function(){
  $("#login-form").submit(function () {
    var payload = $('#login-form').serialize();
      $.post('/users/login', payload)
          .done(function (data, textStatus, jqXHR) {
              var message = data['message'];
              alert(message);
              window.location.href = '/';
          })
          .fail(function (jqXHR, textStatus, errorThrown) {
              var data = JSON.parse(jqXHR.responseText);
              var message = data['message'];
              alert(message);
          });
      return false;
  });
});
  </script>
</head>

<body>
  <div class="container">
    <form id="login-form" action="/users/login" method="post">
    
      <h1>Login</h1>
      <p>Please enter your username and password.</p>
      <hr>

      <label for="username">
        <b>Username</b>
      </label>
      <input type="text" placeholder="Enter Username" name="username" required>

      <label for="password">
        <b>Password</b>
      </label>
      <input type="password" placeholder="Enter Password" name="password" required>

      <button type="submit" class="genericbtn">Login</button>
  
      <div>
        <p>Don't have an account? <a href="/users/signup">Signup</a>.</p>
      </div>
    </form>
  </div>
</body>

</html>