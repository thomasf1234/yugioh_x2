<!DOCTYPE html>
<html>
<head>
  <meta name="viewport">
  <link rel="stylesheet" type="text/css" href="/css/style.css" />
  <script type="text/javascript" src="/js/jquery/3.3.1/jquery.min.js"></script>
  <script>
$(document).ready(function(){
  $("#signup-form").submit(function () {
    var payload = $('#signup-form').serialize();
      $.post('/users', payload)
          .done(function (data, textStatus, jqXHR) {
              var message = data['message'];
              alert(message);
              window.location.href = '/';
          })
          .fail(function (jqXHR, textStatus, errorThrown) {
              var data = JSON.parse(jqXHR.responseText);
              var message = data['message'];
              alert(message);
          });
      return false;
  });
});
  </script>
</head>

<body>
  <div class="container">
    <form id="signup-form" action="/users" method="post">
    
      <h1>Register</h1>
      <p>Please fill in this form to create an account.</p>
      <hr>

      <label for="username">
        <b>Username</b>
      </label>
      <input type="text" placeholder="Enter Username" name="username" required>

      <label for="password">
        <b>Password</b>
      </label>
      <input type="password" placeholder="Enter Password" name="password" required>

      <button type="submit" class="genericbtn">Register</button>
      
      <div>
        <p>Already have an account? <a href="/users/login">Login</a>.</p>
      </div>
    </form>
  </div>
</body>

</html>